        android:theme="@style/AppTheme.Dark">
        <activity android:name=".RegistroUsuario" />
        <activity android:name=".PantallaInicio" android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuPrincipal" />
        <activity android:name=".VerPerfil" />
        <activity android:name=".CrearServicio" />
        <activity android:name=".ListarServicios" />
        <activity android:name=".EditarPerfil" />
        <activity android:name=".CambiarPassword" />
        <activity android:name=".MostrarServicio" />

    </application>

</manifest>