<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>

            <solid android:color="#ff4e00">

            </solid>
            <stroke android:width="@dimen/dim1"
                    android:color="#ffffff">
            </stroke>
            <corners android:radius="@dimen/dim6">

            </corners>
        </shape>


    </item>

    <item>
        <shape>

            <gradient android:angle="270"
                      android:endColor="#ffea00"
                      android:startColor="#ffea00"></gradient>
            <stroke android:width="@dimen/dim1"
                    android:color="#f30d2d">
            </stroke>
            <corners android:radius="@dimen/dim6"></corners>

        </shape>
    </item>

</selector>