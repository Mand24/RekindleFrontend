<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.menu.lateralMenu.About">

    <TextView
        android:id="@+id/about_titulo"
        style="@style/text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dim20"
        android:layout_marginTop="@dimen/dim100"
        android:text="@string/title_about"
    />

    <TextView
        android:id="@+id/about_version"
        style="@style/text_view"
        android:layout_below="@+id/about_titulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim24"
        android:text="@string/version"
    />

    <ImageView
        android:id="@+id/about_logo"
        android:layout_width="@dimen/dim300"
        android:layout_height="@dimen/dim100"
        android:layout_below="@+id/about_version"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim30"
        android:src="@drawable/logo"
    />

    <TextView
        android:id="@+id/about_company"
        style="@style/text_view"
        android:layout_below="@+id/about_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim50"
        android:text="@string/company"
    />

    <TextView
        android:id="@+id/about_rights"
        style="@style/text_view"
        android:layout_below="@+id/about_company"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim24"
        android:text="@string/rights"
    />


</RelativeLayout>