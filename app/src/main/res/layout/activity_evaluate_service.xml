<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/fondo"
    android:gravity="center_vertical"
    tools:context=".view.services.EvaluateService">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:actionBarSize"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/evaluate_services"
            style="@style/text_view"
            android:layout_marginStart="@dimen/dim10"
            android:layout_marginTop="@dimen/dim10"
            android:gravity="center"
            android:text="@string/titulo_evaluate_services"
            android:textSize="32sp"
        />

        <TextView
            android:id="@+id/serviceName"
            style="@style/text_view"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim20"
            android:textSize="20sp"
        />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim20"
            android:numStars="5"
            android:rating="0.0"
            android:stepSize="0.5"
        />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/evaluateService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dim20"
            android:layout_marginRight="@dimen/dim20"
            android:layout_marginTop="@dimen/dim20"
            android:text="@string/evaluate"
        />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>