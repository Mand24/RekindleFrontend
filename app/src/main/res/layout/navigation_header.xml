<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <!--<android.support.v4.widget.CircleImageView-->
        <!--android:id="@+id/imagen_usuario"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="@dimen/dim10"-->

    <!--/>-->

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="@dimen/dim10"
        android:layout_marginBottom="@dimen/dim10"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/imagen_usuario"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorWhite"
    />

    <TextView
        android:id="@+id/nombre_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Nombre Usuario"
        android:layout_marginBottom="@dimen/dim10"
    />

    <TextView
        android:id="@+id/email_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/dim10"
        android:text="email@usuario.com"
        android:layout_marginBottom="@dimen/dim10"
    />


</LinearLayout>