<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.moderate.EnableUser">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/enable_disable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_marginTop="@dimen/dim10"/>

            <ImageView
                android:id="@+id/foto_perfil_voluntario"
                android:layout_width="@dimen/dim100"
                android:layout_height="@dimen/dim100"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dim10"
                android:layout_marginTop="@dimen/dim10"
                android:src="@drawable/foto_perfil"/>

            <TextView
                android:id="@+id/label_tipo_usuario_perfil_voluntario"
                style="@style/text_view"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/enable_disable"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginTop="@dimen/dim50"
                android:text="@string/tipo_usuario"/>

            <TextView
                android:id="@+id/tipo_usuario_perfil_voluntario"
                style="@style/text_view"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/label_tipo_usuario_perfil_voluntario"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginRight="@dimen/dim20"
                android:layout_marginTop="@dimen/dim6"
                android:background="@drawable/back"
                android:padding="@dimen/dim6"
                android:text="Obtener serviceType()"/>

            <TextView
                android:id="@+id/label_nombre_usuario_perfil_voluntario"
                style="@style/text_view"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tipo_usuario_perfil_voluntario"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginTop="@dimen/dim20"
                android:text="@string/nombre_usuario_perfil"/>

            <TextView
                android:id="@+id/nombre_usuario_perfil_voluntario"
                style="@style/text_view"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/label_nombre_usuario_perfil_voluntario"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginRight="@dimen/dim20"
                android:layout_marginTop="@dimen/dim6"
                android:background="@drawable/back"
                android:padding="@dimen/dim6"
                android:text="Obtener nombre()"/>

            <TextView
                android:id="@+id/label_apellido1_usuario_perfil_voluntario"
                style="@style/text_view"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/nombre_usuario_perfil_voluntario"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginTop="@dimen/dim20"
                android:text="@string/texto_1apellido_formulario"/>

            <TextView
                android:id="@+id/apellido1_usuario_perfil_voluntario"
                style="@style/text_view"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/label_apellido1_usuario_perfil_voluntario"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginRight="@dimen/dim20"
                android:layout_marginTop="@dimen/dim6"
                android:background="@drawable/back"
                android:padding="@dimen/dim6"
                android:text="Obtener apellido1()"/>

            <TextView
                android:id="@+id/label_apellido2_usuario_perfil_voluntario"
                style="@style/text_view"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/apellido1_usuario_perfil_voluntario"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginTop="@dimen/dim20"
                android:text="@string/texto_2apellido_formulario"/>

            <TextView
                android:id="@+id/apellido2_usuario_perfil_voluntario"
                style="@style/text_view"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/label_apellido2_usuario_perfil_voluntario"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginRight="@dimen/dim20"
                android:layout_marginTop="@dimen/dim6"
                android:background="@drawable/back"
                android:padding="@dimen/dim6"
                android:text="Obtener apellido2()"/>

            <TextView
                android:id="@+id/label_email_usuario_perfil_voluntario"
                style="@style/text_view"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/apellido2_usuario_perfil_voluntario"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginTop="@dimen/dim20"
                android:text="@string/email_usuario_perfil"/>

            <TextView
                android:id="@+id/email_usuario_perfil_voluntario"
                style="@style/text_view"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/label_email_usuario_perfil_voluntario"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginRight="@dimen/dim20"
                android:layout_marginTop="@dimen/dim6"
                android:background="@drawable/back"
                android:padding="@dimen/dim6"
                android:text="Obtener email()"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>