<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dim6">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDarker"
        app:cardCornerRadius="@dimen/dim4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim16">

            <LinearLayout
                android:id="@+id/photo_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/photo_cardView"
                    android:layout_width="@dimen/dim70"
                    android:layout_height="@dimen/dim70"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/photo_layout"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/name_cv"
                    style="@style/text_view"/>

                <TextView
                    android:id="@+id/surname1_cv"
                    style="@style/text_view"/>


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>