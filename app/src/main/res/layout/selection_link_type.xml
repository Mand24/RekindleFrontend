<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
    >

        <ImageButton
            android:id="@+id/button_legal_type"
            android:layout_width="@dimen/dim70"
            android:layout_height="@dimen/dim70"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_legal"/>

        <Space style="@style/espacio"/>

        <ImageButton
            android:id="@+id/button_health_type"
            android:layout_width="@dimen/dim70"
            android:layout_height="@dimen/dim70"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_health"/>

        <Space style="@style/espacio"/>

        <ImageButton
            android:id="@+id/button_education_type"
            android:layout_width="@dimen/dim70"
            android:layout_height="@dimen/dim70"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/education"/>

    </LinearLayout>

</LinearLayout>